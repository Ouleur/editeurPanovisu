<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefWidth="320.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="editeurpanovisu.EditeurPanovisu">
   <children>
      <VBox prefWidth="320.0">
         <children>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </VBox.margin>
            </Separator>
            <Label text="Titre du panoramique">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin></Label>
            <TextArea fx:id="txtTitrePano" prefHeight="20.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="15.0" left="50.0" right="10.0" top="5.0" />
               </VBox.margin></TextArea>
            <Separator prefWidth="200.0" />
            <Label text="Type de panoramique">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" />
               </VBox.margin></Label>
            <HBox prefWidth="200.0">
               <children>
                  <RadioButton fx:id="radSphere" mnemonicParsing="false" onAction="#clickRadSphere" selected="true" text="Sphere">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin></RadioButton>
                  <Label text="          " />
                  <RadioButton fx:id="radCube" mnemonicParsing="false" onAction="#clickRadCube" text="Cube">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin></RadioButton>
               </children>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </HBox>
            <CheckBox fx:id="chkAfficheTitre" mnemonicParsing="false" text="Affiche Titre">
               <VBox.margin>
                  <Insets bottom="5.0" left="60.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chkAfficheInfo" mnemonicParsing="false" text="Affiche Info">
               <VBox.margin>
                  <Insets bottom="15.0" left="60.0" />
               </VBox.margin>
            </CheckBox>
            <Separator prefWidth="200.0" />
            <Button fx:id="btnValidePano" mnemonicParsing="false" onAction="#clickBtnValidePano" text="Valide" translateX="260.0">
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
